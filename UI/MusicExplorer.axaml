<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:MusicCreator.UI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MusicCreator.UI.MusicExplorer"
             x:DataType="ui:MusicExplorerViewModel">
    <StackPanel>
    <ItemsControl ItemsSource="{Binding Items}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <TextBlock Text="{Binding}" />
                    <Button Margin="40,0,0,0" 
                            Tag="{Binding}" 
                            Click="PlaySound">Play Sound</Button>
                </StackPanel>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
    <Button Click="ShowDashboard">Go Back To Dashboard</Button>
    </StackPanel>
</UserControl>
