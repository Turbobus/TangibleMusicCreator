<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:MusicCreator.UI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MusicCreator.UI.MusicExplorer"
             x:DataType="ui:MusicExplorerViewModel">
    <StackPanel HorizontalAlignment="Left" Margin="50, 50, 0, 0">
    <ItemsControl ItemsSource="{Binding Items}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <DockPanel HorizontalAlignment="Left" Width="500">
                    <TextBlock Text="{Binding}" />
                    <Button Margin="40,0,0,0"
                            HorizontalAlignment="Right"
                            Tag="{Binding}" 
                            Click="PlaySound">Play Sound</Button>
                </DockPanel>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
        <StackPanel HorizontalAlignment="Left">
        <Button Margin="0, 100, 0, 0" Click="ShowDashboard">Go Back To Dashboard</Button>
            <Button Click="KillSound">Stop Sound</Button>
        </StackPanel>
        
    </StackPanel>
</UserControl>
